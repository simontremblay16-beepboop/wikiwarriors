@page
@model WikiWarriorsWebsite.Pages.Fight.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <h4>FightHistory</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FightHistory.Fighter1Id" class="control-label"></label>
                <select asp-for="FightHistory.Fighter1Id" class ="form-control" asp-items="ViewBag.Fighter1Id" ></select>
            </div>
            <div class="form-group">
                <label asp-for="FightHistory.Fighter2Id" class="control-label"></label>
                <select asp-for="FightHistory.Fighter2Id" class ="form-control" asp-items="ViewBag.Fighter2Id" ></select>
            </div>
            <div class="form-group">
                <label asp-for="FightHistory.WinnerId" class="control-label"></label>
                <select asp-for="FightHistory.WinnerId" class ="form-control" asp-items="ViewBag.WinnerId" ></select>
            </div>
            <div class="form-group">
                <label asp-for="FightHistory.FightDate" class="control-label"></label>
                <input asp-for="FightHistory.FightDate" class="form-control" />
                <span asp-validation-for="FightHistory.FightDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FightHistory.DailyFight" /> @Html.DisplayNameFor(model => model.FightHistory.DailyFight)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
